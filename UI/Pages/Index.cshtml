@page
@using SNI_UI2.Controllers
@{
    Layout = null;
    if (!SecurityController.Auth())
    {
        Response.Redirect("./Security/Login");
        return;
    }
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="./App.js" type="module"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body id="App">
    @if (SecurityController.IsAdmin())
    {
        <header id="Header" class="admin-header">
            <a href="~/Admin/Index">Admin Panel</a>
        </header>
    }
    <nav >
        <a class="nav-link text-dark" asp-area="" asp-page="/PagesViews/Transaction_FacturaView"> Transaction_Factura</a>
        <a class="nav-link text-dark" asp-area="" asp-page="/PagesViews/Transaction_LotesView"> Transaction_Lotes</a>
        <a class="nav-link text-dark" asp-area="" asp-page="/PagesViews/Transaction_Transacciones_LotesView"> Transaction_Transacciones_Lotes</a>
    </nav>
</body>

</html>